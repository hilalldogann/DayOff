<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:DayOff.ViewModels"
             x:DataType="viewModels:EmployeeListPageViewModel"
             x:Class="DayOff.Views.EmployeeListPage"
             Title="Employee List">
    <VerticalStackLayout Margin="10">
        <Label Text="Employee List" FontSize="30"/>
        <Button Text="Add Employee"

                Command="{Binding AddUpdateEmployeeCommand}"

                HorizontalOptions="EndAndExpand"/>

    </VerticalStackLayout>
</ContentPage>
